{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "jedi.enable": true,
  "jedi.executable.command": "jedi-language-server",
  "jedi.diagnostics.enable": true,
  "diagnostic.enable": true,
  "diagnostic.errorSign": "!!",
  "diagnostic.warningSign": "==",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": false,
  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.filetypes": {
    "python": "flake8",
    "markdown": "textlint"
  },
  "diagnostic-languageserver.linters": {
    "flake8": {
      "sourceName": "flake8",
      "command": "flake8",
      "debounce": 200,
      "rootPatterns": [".git", "pyproject.toml", "setup.py"],
      "args": [
        "--ignore=E402,C901,W503,W504,E116,E702,C0103,C0114,C0115,C0116,C0103,C0301,W0613,W0102,R0903,R0902,R0914,R0915,R0205,W0703,W0702,W0603",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatLines": 1,
      "formatPattern": [
        "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "W": "info",
        "E": "warning",
        "F": "info",
        "C": "info",
        "N": "hint"
      }
    },
    "textlint": {
      "sourceName": "textlint",
      "command": "textlint",
      "debounce": 200,
      "rootPatterns": [".textlintrc"],
      "args": [
        "-f",
        "unix",
        "--stdin"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatLines": 1,
      "formatPattern": [
        "(.*):(\\d+):(\\d+): (.*) \\[([A-Z])rror\\/(.*)\\]$",
        {
          "line": 2,
          "column": 3,
          "security": 5,
          "message": 4
        }
      ],
      "securities": {
        "E": "error"
      }
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black", "isort", "docformatter"]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["-q", "-S", "-"]
    },
    "isort": {
      "command": "isort",
      "args": ["-q", "-"]
    },
    "docformatter": {
      "command": "docformatter",
      "args": ["-"]
    }
  },
  "explorer.width": 30,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.reveal.auto": false,
  "explorer.previewAction.onHover": false,
  "explorer.icon.source": "nvim-web-devicons",
  "explorer.icon.enableNerdfont": true,
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.keyMappings": {
    "s": "open:vsplit",
    "mm": "rename",
    "mc": "copyFile",
    "C": "copyFile",
    "md": "delete",
    "D": "delete",
    "ma": "addFile",
    "mA": "addDirectory"
  }
}
